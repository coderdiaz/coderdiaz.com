---
import type { ImageMetadata } from 'astro';

interface Props {
  content: string;
  avatar?: ImageMetadata;
  avatarAlt?: string;
  author?: string;
  jobTitle?: string;
}

const { content, avatar, avatarAlt, author, jobTitle } = Astro.props;
---
<blockquote class="px-4 py-6 md:px-8 md:py-8 lg:px-16 lg:py-10 not-prose flex flex-col gap-6">
  <p class="relative text-2xl md:text-3xl font-semibold">
    <span class="bg-accent-50 text-accent-1000">{content}</span>
  </p>
  <footer class="flex items-center gap-3">
    { avatar && <img class="w-12 h-12 rounded-full" src={avatar.src} alt={avatarAlt} />}
    { author && <div class="flex flex-col gap-1">
      <cite class="not-italic font-semibold text-[1rem] leading-none">{author}</cite>
      { jobTitle && <cite class="not-italic font-medium text-[0.95rem] text-tones-700 leading-none">{jobTitle}</cite>}
    </div>}
  </footer>
</blockquote>
