  <section>
    <Container class="py-12">
      <div class="relative flex flex-col gap-3">
        <div class="flex items-center">
          <span class="font-semibold text-gray-500">Taller intensivo de bases de datos</span>
        </div>
        <div class="flex flex-col gap-4">
          <div class="w-full md:max-w-[36rem] flex flex-col gap-2">
            <h1 class="text-3xl md:text-5xl font-bold text-[#1442B0]">{entry.data.title}</h1>
            <p>{entry.data.description}</p>
          </div>
          <div class="flex flex-col gap-3">
            <div class="flex items-center gap-3">
              <a href="https://book.stripe.com/eVadRx7Zq2we4E028k?prefilled_promo_code=EARLY50" class="relative px-6 py-2 rounded-full bg-accent-400 text-accent-1000 text-center md:text-left font-semibold transition hover:bg-accent-400/75 z-10 md:w-max">
                InscrÃ­bete ahora
